<div class="col-md-7">
	<div class="text-center">
		<h1>Лично Съобщениe до</h1><h2>{{message.to.email}}</h2>
	</div>
	<div class="border"></div>
	<div class="messages">
		<div ng-repeat="message in messages" class="row msg-entry sent-by-me">
			<div class="col-xs-9">
				<p>{{message.text}}</p>
			</div>
			<div class="col-xs-3 text-right">
				<a href="">Аз</a>
			</div>
		</div>
	</div>
	<textarea ng-model="message.text" class="form-control full-width"></textarea>
	<button ng-if="message.to" ng-click="send()" class="btn btn-success pull-right mt-20">Изпрати</button>
</div>