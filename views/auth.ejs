<div class="col-md-7">
    <div class="text-center">
        <h1>Вход</h1>
    </div>
    <div class="row login-form">
        <div class="col-md-8">
            <div ng-if="loginErrorMsg" class="form-group row alert alert-danger text-center">
                {{loginErrorMsg}}
            </div>
            <div class="form-group row">
                <label for="user-name" class="col-xs-6">Потребителско име:</label>
                <input id="user-name" ng-model="email" type="text" class="form-control col-xs-6">
            </div>
            <div class="form-group row">    
                <label for="pass" class="col-xs-6">Парола:</label>
                <input id="pass" ng-model="password" type="password" class="form-control col-xs-6">
            </div>
        </div>
    </div>
    <div class="text-center">
        <button ng-click="login(email,password)" class="btn btn-success">Вход</button>
    </div>
    <div class="text-center">
        <a ng-href="#/signup">Регистрация</a>
    </div>
</div>