<div class="col-md-7">
	<div class="mt-20 pull-right">
		<a ng-href="#/postAd" class="btn btn-success">
			Добави Обява
		</a>
		<a ng-href="#/ads/my" class="btn btn-primary margin-right">
			Моите Обяви
		</a>
	</div>
	<div class="text-center">
		<h1>Обяви</h1>
	</div>
	<table ng-if="ads" datatable="" dt-options="dtOptions" class="table table-striped table-bordered">
		<thead>
			<tr>
	        	<th>Име на собственик</th>
	        	<th>Описание</th>
	        	<th></th>
	    	</tr>
		</thead>
		<tbody>
			<tr ng-repeat="ad in ads">
				<td>
					<img width="100px" src="https://lh3.googleusercontent.com/-TJc2-TVmW3M/AAAAAAAAAAI/AAAAAAAABeU/o3gLbpzsxrE/photo.jpg" alt="">
					<p>{{ad.user.email}}</p>
				</td>
				<td>{{ad.content}}</td>
				<td class="text-center">
					<a ng-href="#/ad/{{ad.id}}"class="btn btn-xs btn-info display-block">Виж Повече</a>
				</td>
			</tr>
		</tbody>
	</table>
</div>
