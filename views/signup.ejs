<div class="col-md-7">
	<div class="text-center">
		<h1>Регистрация</h1>
	</div>
	<div class="row login-form">
		<div class="col-md-8">
			<div ng-if="signupErrorMsg" class="form-group row alert alert-danger text-center">
                {{signupErrorMsg}}
            </div>
			<div class="form-group row">
				<label for="user-name" class="col-xs-6">Потребителско име:</label>
				<input id="user-name" ng-model="user.email" type="text" class="form-control col-xs-6">
			</div>
			<div class="form-group row">
				<label for="pass" class="col-xs-6">Парола:</label>
				<input id="pass" ng-model="user.password" type="password" class="form-control col-xs-6">
			</div>
			<div class="form-group row">
				<label for="pass-retype" class="col-xs-6">Повтори парола:</label>
				<input id="pass-retype" ng-model="passwordAgain" type="password" class="form-control col-xs-6">
			</div>
		</div>
	</div>
	<div class="text-center">
		<button ng-click="signup(user)" ng-disabled="user.password != passwordAgain || user.password.length < 6" class="btn btn-success">Регистрация</button>
	</div>
	<div class="text-center">
		<a ng-href="#/auth">Вход</a>
	</div>
</div>